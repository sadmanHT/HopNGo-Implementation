{
  "dashboard": {
    "id": null,
    "title": "HopNGo Error Monitoring",
    "tags": ["hopngo", "errors", "monitoring", "sentry"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all", "selected": true},
            {"text": "Production", "value": "production", "selected": false},
            {"text": "Staging", "value": "staging", "selected": false},
            {"text": "Development", "value": "development", "selected": false}
          ],
          "current": {"text": "All", "value": "$__all"},
          "multi": true,
          "includeAll": true
        },
        {
          "name": "service",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all", "selected": true},
            {"text": "Frontend", "value": "frontend", "selected": false},
            {"text": "Backend", "value": "backend", "selected": false},
            {"text": "Auth Service", "value": "auth-service", "selected": false},
            {"text": "Booking Service", "value": "booking-service", "selected": false},
            {"text": "Search Service", "value": "search-service", "selected": false}
          ],
          "current": {"text": "All", "value": "$__all"},
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Rate Overview",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(sentry_errors_total{environment=~\"$environment\", service=~\"$service\"}[5m]))",
            "legendFormat": "Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            },
            "unit": "reqps"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "horizontal"
        }
      },
      {
        "id": 2,
        "title": "Critical Errors (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(sentry_errors_total{environment=~\"$environment\", service=~\"$service\", level=\"error\"}[1h]))",
            "legendFormat": "Critical Errors",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 3,
        "title": "Affected Users (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "count(count by (user_id)(sentry_errors_total{environment=~\"$environment\", service=~\"$service\"}[1h]))",
            "legendFormat": "Affected Users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red": 100}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Budget Remaining",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "(1 - (sum(rate(sentry_errors_total{environment=\"production\"}[30d])) / sum(rate(http_requests_total{environment=\"production\"}[30d])))) * 100",
            "legendFormat": "Error Budget %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 5,
        "title": "Error Rate by Service",
        "type": "timeseries",
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum by (service)(rate(sentry_errors_total{environment=~\"$environment\", service=~\"$service\"}[5m]))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "unit": "reqps"
          }
        },
        "options": {
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "Top Error Types",
        "type": "piechart",
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (error_type)(increase(sentry_errors_total{environment=~\"$environment\", service=~\"$service\"}[1h])))",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {"mode": "single", "sort": "none"},
          "legend": {"displayMode": "visible", "placement": "right", "values": ["percent"]},
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 7,
        "title": "Critical Feature Errors",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 17},
        "targets": [
          {
            "expr": "sum by (feature, error_type, service)(increase(sentry_errors_total{environment=~\"$environment\", service=~\"$service\", feature=~\"payment|booking|search|auth\"}[1h]))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {},
              "renameByName": {
                "feature": "Feature",
                "error_type": "Error Type",
                "service": "Service",
                "Value": "Count (1h)"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "filterable": true
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Count (1h)"},
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [{"desc": true, "displayName": "Count (1h)"}]
        }
      },
      {
        "id": 8,
        "title": "Error Response Times",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 25},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le, service)(rate(http_request_duration_seconds_bucket{status=~\"5..\", environment=~\"$environment\", service=~\"$service\"}[5m])))",
            "legendFormat": "{{service}} - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum by (le, service)(rate(http_request_duration_seconds_bucket{status=~\"5..\", environment=~\"$environment\", service=~\"$service\"}[5m])))",
            "legendFormat": "{{service}} - 50th percentile",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 9,
        "title": "User Impact Heatmap",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 25},
        "targets": [
          {
            "expr": "sum by (hour)(increase(sentry_errors_total{environment=~\"$environment\", service=~\"$service\"}[1h]))",
            "legendFormat": "Errors per hour",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "calculation": {},
          "cellGap": 2,
          "cellValues": {},
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Oranges",
            "steps": 64
          },
          "exemplars": {"color": "rgba(255,0,255,0.7)"},
          "filterValues": {"le": 1e-9},
          "legend": {"show": true},
          "rowsFrame": {"layout": "auto"},
          "tooltip": {"show": true, "yHistogram": false},
          "yAxis": {"axisPlacement": "left", "reverse": false, "unit": "short"}
        }
      },
      {
        "id": 10,
        "title": "Recent Critical Errors",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 33},
        "targets": [
          {
            "expr": "{job=\"sentry\"} |= \"level=error\" | json | environment=~\"$environment\" | service=~\"$service\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(deployment_timestamp{environment=~\"$environment\"}[1m])",
          "iconColor": "blue",
          "tags": ["deployment"]
        },
        {
          "name": "Incidents",
          "datasource": "prometheus",
          "enable": true,
          "expr": "increase(incident_created{environment=~\"$environment\"}[1m])",
          "iconColor": "red",
          "tags": ["incident"]
        }
      ]
    },
    "links": [
      {
        "title": "Sentry Dashboard",
        "url": "https://sentry.io/organizations/hopngo/",
        "type": "link",
        "icon": "external link"
      },
      {
        "title": "Runbook",
        "url": "https://docs.hopngo.com/runbooks/error-response",
        "type": "link",
        "icon": "doc"
      }
    ]
  }
}