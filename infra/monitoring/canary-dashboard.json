{
  "dashboard": {
    "id": "hopngo-canary-monitoring",
    "title": "HopNGo v1.0.0 Canary Deployment Monitoring",
    "tags": ["hopngo", "canary", "production", "v1.0.0"],
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "P95 Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"hopngo-api\", environment=\"production\"}[5m])) by (le, service))",
            "legendFormat": "{{service}} P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        },
        "alert": {
          "name": "High P95 Latency",
          "condition": "> 1.0s",
          "frequency": "30s"
        }
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"hopngo-api\", status=~\"5..\", environment=\"production\"}[5m])) / sum(rate(http_requests_total{job=\"hopngo-api\", environment=\"production\"}[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "alert": {
          "name": "High Error Rate",
          "condition": "> 5%",
          "frequency": "30s"
        }
      },
      {
        "id": 3,
        "title": "Queue Lag (Kafka)",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum{job=\"kafka-exporter\", environment=\"production\"}",
            "legendFormat": "{{topic}} - {{partition}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 10000}
              ]
            }
          }
        },
        "alert": {
          "name": "High Queue Lag",
          "condition": "> 10000 messages",
          "frequency": "1m"
        }
      },
      {
        "id": 4,
        "title": "Request Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"hopngo-api\", environment=\"production\"}[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        }
      },
      {
        "id": 5,
        "title": "Database Connection Pool",
        "type": "graph",
        "targets": [
          {
            "expr": "hikaricp_connections_active{job=\"hopngo-api\", environment=\"production\"}",
            "legendFormat": "Active - {{service}}"
          },
          {
            "expr": "hikaricp_connections_idle{job=\"hopngo-api\", environment=\"production\"}",
            "legendFormat": "Idle - {{service}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=\"hopngo-api\", environment=\"production\"} / jvm_memory_max_bytes{job=\"hopngo-api\", environment=\"production\"} * 100",
            "legendFormat": "{{service}} - {{area}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "Feature Flag Usage",
        "type": "table",
        "targets": [
          {
            "expr": "sum(feature_flag_evaluations_total{environment=\"production\"}) by (flag_name, enabled)",
            "legendFormat": "{{flag_name}}"
          }
        ]
      },
      {
        "id": 8,
        "title": "Payment Processing",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(payment_transactions_total{status=\"success\", environment=\"production\"}[5m]))",
            "legendFormat": "Successful Payments/min"
          },
          {
            "expr": "sum(rate(payment_transactions_total{status=\"failed\", environment=\"production\"}[5m]))",
            "legendFormat": "Failed Payments/min"
          }
        ]
      },
      {
        "id": 9,
        "title": "Search Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(search_request_duration_seconds_bucket{environment=\"production\"}[5m])) by (le, search_type))",
            "legendFormat": "{{search_type}} P95"
          }
        ]
      },
      {
        "id": 10,
        "title": "AI Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"ai-service\", environment=\"production\"}",
            "legendFormat": "AI Service Status"
          },
          {
            "expr": "avg(ai_model_inference_duration_seconds{environment=\"production\"})",
            "legendFormat": "Avg Inference Time"
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "increase(deployment_events_total{environment=\"production\"}[1m])",
          "iconColor": "blue"
        },
        {
          "name": "Alerts",
          "datasource": "alertmanager",
          "iconColor": "red"
        }
      ]
    }
  },
  "alerting": {
    "rules": [
      {
        "alert": "HighLatency",
        "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"hopngo-api\", environment=\"production\"}[5m])) by (le)) > 1",
        "for": "2m",
        "labels": {
          "severity": "warning",
          "service": "hopngo-api"
        },
        "annotations": {
          "summary": "High latency detected",
          "description": "P95 latency is above 1 second for {{ $labels.service }}"
        }
      },
      {
        "alert": "HighErrorRate",
        "expr": "sum(rate(http_requests_total{job=\"hopngo-api\", status=~\"5..\", environment=\"production\"}[5m])) / sum(rate(http_requests_total{job=\"hopngo-api\", environment=\"production\"}[5m])) > 0.05",
        "for": "1m",
        "labels": {
          "severity": "critical",
          "service": "hopngo-api"
        },
        "annotations": {
          "summary": "High error rate detected",
          "description": "Error rate is above 5% for {{ $labels.service }}"
        }
      },
      {
        "alert": "QueueLagHigh",
        "expr": "kafka_consumer_lag_sum{job=\"kafka-exporter\", environment=\"production\"} > 10000",
        "for": "5m",
        "labels": {
          "severity": "warning",
          "service": "kafka"
        },
        "annotations": {
          "summary": "Kafka consumer lag is high",
          "description": "Consumer lag for {{ $labels.topic }} is {{ $value }} messages"
        }
      }
    ]
  },
  "slo_targets": {
    "availability": "99.9%",
    "latency_p95": "< 500ms",
    "error_rate": "< 1%",
    "queue_lag": "< 1000 messages"
  }
}