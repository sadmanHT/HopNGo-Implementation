<svg xmlns="http://www.w3.org/2000/svg" width="800" height="600" viewBox="0 0 800 600">
  <!-- Sky gradient -->
  <defs>
    <linearGradient id="skyGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#FFE4B5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="sunGradient" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#FFA500;stop-opacity:0.8" />
    </radialGradient>
  </defs>
  
  <!-- Sky background -->
  <rect width="800" height="400" fill="url(#skyGradient)"/>
  
  <!-- Sun -->
  <circle cx="650" cy="120" r="60" fill="url(#sunGradient)"/>
  
  <!-- Mountains -->
  <polygon points="0,300 200,150 400,200 600,100 800,180 800,400 0,400" fill="#8B4513" opacity="0.8"/>
  <polygon points="100,350 300,200 500,250 700,150 800,200 800,400 0,400" fill="#A0522D" opacity="0.6"/>
  
  <!-- Water -->
  <rect x="0" y="400" width="800" height="200" fill="#4682B4"/>
  
  <!-- Water reflections -->
  <ellipse cx="650" cy="450" rx="40" ry="15" fill="#FFD700" opacity="0.6"/>
  <rect x="0" y="420" width="800" height="2" fill="#87CEEB" opacity="0.5"/>
  <rect x="0" y="440" width="800" height="1" fill="#87CEEB" opacity="0.3"/>
  
  <!-- Clouds -->
  <ellipse cx="150" cy="80" rx="40" ry="20" fill="white" opacity="0.8"/>
  <ellipse cx="170" cy="75" rx="35" ry="18" fill="white" opacity="0.8"/>
  <ellipse cx="130" cy="75" rx="30" ry="15" fill="white" opacity="0.8"/>
  
  <ellipse cx="450" cy="60" rx="50" ry="25" fill="white" opacity="0.7"/>
  <ellipse cx="480" cy="55" rx="40" ry="20" fill="white" opacity="0.7"/>
  <ellipse cx="420" cy="55" rx="35" ry="18" fill="white" opacity="0.7"/>
  
  <!-- Sample travel photo text -->
  <text x="400" y="550" font-family="Arial, sans-serif" font-size="24" fill="white" text-anchor="middle" opacity="0.9">Sample Travel Photo - Sunset View</text>
</svg>